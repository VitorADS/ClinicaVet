{% extends '/animal/baseanimal.html.twig' %}

{% block title %}Adicionar responsavel{% endblock %}

{% block content %}
{% include "alerts/message.html.twig" %}

<h3>Selecione os responsaveis</h3> <hr>

<form action="{{path('app_animal_responsavel_add', {id: app.request.get('id')})}}" method="POST">
    <table class="table table-dark table-striped border border-black text-center mt-4">
        <thead>
            <th></th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Padrao?</th>
        </thead>
        <tbody>
            {% for responsavel in responsaveis %}
                <tr>
                    <td><input class="form-check-input" type="checkbox" name="id[]" value="{{ responsavel.id }}"></td>
                    <td>{{ responsavel.nome }}</td>
                    <td>{{ responsavel.email }}</td>
                    <td><input class="form-check-input" type="radio" name="padrao" value="{{ responsavel.id }}"></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-sm btn-success" type="submit">Adicionar</button>
</form>

{% endblock %}
