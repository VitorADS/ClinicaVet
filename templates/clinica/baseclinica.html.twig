{% extends 'logged.html.twig' %}

{% block title %}Clinicas{% endblock %}

{% block body %}
<div class="bg-dark text-white p-3 border border-black rounded-bottom">
    <div class="row align-items-start" style="height: {{altura_conteudo}};">
        <div class="col-2 bg-black pt-3 me-2 rounded" style="height: 100%;">
            <nav class="nav nav-pills flex-column">
                <a class="nav-link text-white {% if 'app_clinica_home' == app.request.get('_route') %} active{% endif %}"
                    href="{{path('app_clinica_home')}}">Clinicas</a>
            </nav>
            <nav class="nav nav-pills flex-column">
                <a class="nav-link text-white {% if 'app_clinica_criar' == app.request.get('_route') %} active{% endif %}"
                    href="{{path('app_clinica_criar')}}">Criar clinica</a>
            </nav>
        </div>
        <div class="col bg-dark text-white p-3" style="height: 100%;">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}
