{% extends 'clinica/baseclinica.html.twig' %}

{% block title %}Hello ClinicaController!{% endblock %}

{% block content %}
{% include "alerts/message.html.twig" %}

<h3>Selecione os profissionais:</h3>

<form action="{{path('app_clinica_profissional_add', {id: app.request.get('id')})}}" method="POST">
    <table class="table table-dark table-striped border border-black text-center mt-4">
        <thead>
            <th></th>
            <th>Nome</th>
            <th>E-mail</th>
        </thead>
        <tbody>
            {% for profissional in profissionais %}
                <tr>
                    <td><input class="form-check-input" type="checkbox" name="id[]" value="{{ profissional.id }}"></td>
                    <td>{{ profissional.nome }}</td>
                    <td>{{ profissional.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-sm btn-success" type="submit">Adicionar</button>
</form>

{% endblock %}
