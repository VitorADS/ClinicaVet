{% extends 'papel/base.html.twig' %}

{% block title %}Papeis{% endblock %}

{% block content %}
    {% include "alerts/message.html.twig" %}
    <h3>Papeis</h3><hr>
    <table class="table table-dark table-striped border border-black text-center mt-4">
        <thead>
            <th>Nome</th>
            <th>Ativo</th>
            <th>Acoes</th>
        </thead>
        <tbody>
            {% for registro in registros %}
                <tr>
                    <td>{{ registro.nome }}</td>
                    <td>{{ registro.ativo }}</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a href="{{path('app_papel_editar', {id: registro.id})}}" class="btn btn-sm btn-primary">
                                E
                            </a>
                            <form action="{{path('app_papel_remover', {id: registro.id})}}" method="POST">
                                <button class="btn btn-sm btn-danger ms-1">X</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
